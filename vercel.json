{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "devCommand": "cd frontend && npm run dev",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.my-bus.eu"
        }
      ],
      "destination": "https://my-bus.eu/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "https://mybus-backend-aygc.onrender.com/:path*" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/" 
    }
  ]
}
